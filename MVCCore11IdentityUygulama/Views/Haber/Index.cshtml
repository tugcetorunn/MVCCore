@model IEnumerable<MVCCore11IdentityUygulama.ViewModels.Haberler.HaberListeleVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="HaberEkle">Create New</a> @* sadece editörlere ve admine gözüksün *@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResimYolu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OlusturulmaTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategori)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <input type="hidden" asp-for="@item.HaberId"/>
        <tr>
            <td>
                <a asp-action="Detay" asp-route-id="@item.HaberId">@Html.DisplayFor(modelItem => item.Baslik)</a>
            </td>
            <td>
                <img src="~/images/@item.ResimYolu" style="width: 150px; height:200px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OlusturulmaTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori)
            </td>
            <td>
                <a asp-route-id="@item.HaberId" asp-action="Detay" class="btn btn-primary">Detay</a>
                <a asp-route-id="@item.HaberId" asp-action="HaberGuncelle" class="btn btn-secondary">Düzenle</a>
                <a asp-route-id="@item.HaberId" asp-action="Sil" class="btn btn-danger" onclick="return confirm('Emin misiniz?')">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
