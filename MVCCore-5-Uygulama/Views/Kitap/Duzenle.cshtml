@model MVCCore_5_Uygulama.ViewModels.KitapGuncelleFormVM

@{
    ViewData["Title"] = "Duzenle";
}

<h1>Duzenle</h1>

<h4>KitapGuncelleVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Duzenle" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Kitap.KitapId" />
            <div class="form-group">
                <label asp-for="Kitap.KitapAdi" class="control-label"></label>
                <input asp-for="Kitap.KitapAdi" class="form-control" />
                <span asp-validation-for="Kitap.KitapAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kitap.Fiyat" class="control-label"></label>
                <input asp-for="Kitap.Fiyat" class="form-control" />
                <span asp-validation-for="Kitap.Fiyat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kitap.SayfaSayisi" class="control-label"></label>
                <input asp-for="Kitap.SayfaSayisi" class="form-control" />
                <span asp-validation-for="Kitap.SayfaSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kitap.KapakResmiUrl" class="control-label"></label>
                <input type="hidden" asp-for="Kitap.KapakResmiUrl" />
                <input type="file" asp-for="Kitap.KapakResmiDosya" class="form-control" />
                <span asp-validation-for="Kitap.KapakResmiUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kitap.Ozet" class="control-label"></label>
                <textarea asp-for="Kitap.Ozet" class="form-control"></textarea>
                <span asp-validation-for="Kitap.Ozet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kitap.BasimSayisi" class="control-label"></label>
                <input asp-for="Kitap.BasimSayisi" class="form-control" />
                <span asp-validation-for="Kitap.BasimSayisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kitap.YazarId" class="control-label"></label>
                <select asp-for="Kitap.YazarId" asp-items="@Model.Yazarlar" class="form-control"></select>
                <span asp-validation-for="Kitap.YazarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kitap.YayineviId" class="control-label"></label>
                <select asp-for="Kitap.YayineviId" asp-items="@Model.Yayinevleri" class="form-control"></select>
                <span asp-validation-for="Kitap.YayineviId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kitap.KategoriId" class="control-label"></label>
                <select asp-for="Kitap.KategoriId" asp-items="@Model.Kategoriler" class="form-control"></select>
                <span asp-validation-for="Kitap.KategoriId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Düzenle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Kitap Listesini Gör</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
