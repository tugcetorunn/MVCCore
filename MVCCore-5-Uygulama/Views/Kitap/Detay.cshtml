@model MVCCore_5_Uygulama.ViewModels.KitapGetirVM

@{
    ViewData["Title"] = "Detay";
}

<h1>Detay</h1>

<div>
    <h4>Kitap</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kitap Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KitapId)
        </dd>
        <dt class="col-sm-2">
            Kitap Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KitapAdi)
        </dd>
        <dt class="col-sm-2">
            Fiyat
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fiyat)
        </dd>
        <dt class="col-sm-2">
            Sayfa Sayısı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SayfaSayisi)
        </dd>
        <dt class="col-sm-2">
            Kapak Resmi
        </dt>
        <dd class="col-sm-10">
            
            <img src="~/images/@Model.KapakResmiUrl"/>
        </dd>
        <dt class="col-sm-2">
            Özet
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ozet)
        </dd>
        <dt class="col-sm-2">
            Yazar
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Yazar)
        </dd>
        <dt class="col-sm-2">
            Yayınevi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Yayinevi)
        </dd>
        <dt class="col-sm-2">
            Kategori
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kategori)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Düzenle", "Duzenle", new { id = Model.KitapId }) |
    <a asp-action="Index">Kitap Listesini Gör</a>
</div>

